USE [Biblioteca]
GO

/****** Object:  StoredProcedure [dbo].[InsertarUsuario]    Script Date: 17/10/2024 ******/
SET ANSI_NULLS ON
GO
SET QUOTED_IDENTIFIER ON
GO
ALTER PROC [dbo].[InsertarUsuario](
    @NombreUsuario VARCHAR(20),
    @Cuenta VARCHAR(20)
)
AS
BEGIN
    INSERT INTO Usuarios (NombreUsuario, Cuenta)
    VALUES (@NombreUsuario, @Cuenta)
END

/****** Object:  StoredProcedure [dbo].[ActualizarUsuario]    Script Date: 17/10/2024 ******/
SET ANSI_NULLS ON
GO
SET QUOTED_IDENTIFIER ON
GO
ALTER PROC [dbo].[ActualizarUsuario](
    @IdUsuario INT,
    @NombreUsuario VARCHAR(20),
    @Cuenta VARCHAR(20)
)
AS
BEGIN
    UPDATE Usuarios
    SET NombreUsuario = @NombreUsuario,
        Cuenta = @Cuenta
    WHERE IdUsuario = @IdUsuario
END

/****** Object:  StoredProcedure [dbo].[BuscarUsuario]    Script Date: 17/10/2024 ******/
SET ANSI_NULLS ON
GO
SET QUOTED_IDENTIFIER ON
GO
ALTER PROC [dbo].[BuscarUsuario](
    @NombreUsuario VARCHAR(20)
)
AS
BEGIN
    SELECT * FROM Usuarios WHERE NombreUsuario = @NombreUsuario
END
